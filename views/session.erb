    <div class="col s0 m3 hde-on-med-and-down">
      <%= render "layout.erb", :sidebar %>
    </div>
    <div class="col s12 m12">
      <div class="row">
      <div class="col s12">
        <h4 class="center">
          Coding Session - <em style="text-transform: uppercase"><%= params["id"] %></em> 
          <span class="label-live new badge" style="position: relative; left: 10px"></span>
        </h4> 
      </div>
        <div class="col s12" >
          <div id="firepad-container" style="height: 100%"></div>

          <script>
            function init() {
              //// Initialize Firebase.
              // TODO: Replace above line with:
               var firepadRef = new Firebase('https://pair-pro.firebaseio.com/sessions/<%= @id %>');
              //// Create CodeMirror (with line numbers and the JavaScript mode).
              var codeMirror = CodeMirror(document.getElementById('firepad-container'), {
                lineNumbers: true,
                mode: 'javascript'
              });
              //// Create Firepad.
              var firepad = Firepad.fromCodeMirror(firepadRef, codeMirror, {
                defaultText: '// Powerful pair programming with PairPro\nfunction go() {\n  var message = "Hello, world. My name is PairPro";\n  console.log(message);\n}'
              });
            }
            init();
          </script>
        </div>
      </div>

    </div>
  
  
  